rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserTenantId() {
      return request.auth.token.tenantId;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function belongsToTenant(tenantId) {
      return isAuthenticated() && 
             (getUserTenantId() == tenantId || 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId);
    }
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read: if isOwner(userId);
      // Allow create for new users (first time registration)
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent accidental deletion
    }
    
    // Tenants collection
    match /tenants/{tenantId} {
      // Only tenant members can read tenant data OR if user is the owner
      allow read: if belongsToTenant(tenantId) || 
                     (isAuthenticated() && get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerId == request.auth.uid);
      // Allow create for authenticated users (new tenant creation)
      allow create: if isAuthenticated();
      // Allow update if user is the owner OR belongs to tenant
      allow update: if (isAuthenticated() && resource.data.ownerId == request.auth.uid) ||
                      belongsToTenant(tenantId);
      allow delete: if false; // Prevent deletion
      
      // Clients subcollection
      match /clients/{clientId} {
        // Helper to check if user has permission (owner or instructor)
        function canAccessClients() {
          return belongsToTenant(tenantId);
        }
        
        // Allow read/write if user belongs to tenant
        allow read: if canAccessClients();
        allow create: if canAccessClients();
        allow update: if canAccessClients();
        allow delete: if canAccessClients();
      }
      
      // Appointments subcollection
      match /appointments/{appointmentId} {
        function canAccessAppointments() {
          return belongsToTenant(tenantId);
        }
        
        allow read: if canAccessAppointments();
        allow create: if canAccessAppointments();
        allow update: if canAccessAppointments();
        allow delete: if canAccessAppointments();
      }
      
      // Availability subcollection
      match /availability/{availabilityId} {
        function canManageAvailability() {
          return belongsToTenant(tenantId);
        }
        
        allow read: if canManageAvailability();
        allow create: if canManageAvailability();
        allow update: if canManageAvailability();
        allow delete: if canManageAvailability();
      }
      
      // Payment Configuration subcollection
      match /paymentConfig/{configId} {
        allow read, create, update, delete: if belongsToTenant(tenantId);
      }
      
      // Payments subcollection
      match /payments/{paymentId} {
        // Allow read/write for tenant members
        allow read, create, update, delete: if belongsToTenant(tenantId);
        
        // Allow public read/update with valid payment token (for public payment page)
        allow read: if resource.data.paymentToken == request.query.token;
        allow update: if resource.data.paymentToken == request.query.token && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proofUrl', 'proofStatus', 'updatedAt']);
      }
      
      // Routines subcollection
      match /routineTemplates/{templateId} {
        allow read: if belongsToTenant(tenantId);
        allow create: if belongsToTenant(tenantId);
        allow update: if belongsToTenant(tenantId);
        allow delete: if belongsToTenant(tenantId);
      }
      
      match /clientRoutines/{routineId} {
        allow read: if belongsToTenant(tenantId);
        allow create: if belongsToTenant(tenantId);
        allow update: if belongsToTenant(tenantId);
        allow delete: if belongsToTenant(tenantId);
      }
      
      // Exercises/Dynamics subcollection
      match /exercises/{exerciseId} {
        allow read: if belongsToTenant(tenantId);
        allow create: if belongsToTenant(tenantId);
        allow update: if belongsToTenant(tenantId);
        allow delete: if belongsToTenant(tenantId);
      }
      
      // Academies subcollection
      match /academies/{academyId} {
        allow read: if belongsToTenant(tenantId);
        allow create: if belongsToTenant(tenantId);
        allow update: if belongsToTenant(tenantId);
        allow delete: if belongsToTenant(tenantId);
      }
    }
  }
}
